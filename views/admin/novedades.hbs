<div class="container" style="margin-top: 50px;">
    {{!---fila1---}}
    <div class="row">
        <p class="text-end">Hi {{usuario}}!  <a class="btn btn-danger"
        href="/admin/login/logout "> Logout <i class ="fas fa-sign-out-alt"></i></a></p>
    </div> 
    {{!---fin-fila1---}}
    {{!---fila 2---}}
    <div class ="row">
        <div class="col-7" style="mergin-top:-9px;">
            <h2>Entry List</h2>

        </div>
        <div class="col-2 text-right">
            <a href= "/admin/novedades/agregar" class= "btn btn-success"><i class="fas fa-plus"></i> New</a >
        </div>

        <div class="col-3">
          <form class="d-flex text-right"> 
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="q" {{#if q}} value="{{q}}" {{/if}} >
            
            
            <button class="btn btn-secondary" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
             </form>


        </div>

    </div>
  
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Image</th>
      <th scope="col">Header</th>
      <th scope="col">Description</th>
      <th scope="col">Github Link</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each novedades}}
   <tr>
      <th scope="row">{{id}}</th>
      <td><img src="{{img_url}}" alt="keyboard"></td>
      <td>{{header}}</td>
      <td>{{description}}</td>
      <td><a href="{{url}}">{{url}}</a></td>
      <td>
          <a href= "/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class= "fas fa-pencil-alt"></i></a>
          <a href= "/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class= "fas fa-trash"></i></a>
       </td>    

    </tr>
    {{/each}}
  </tbody>
</table>
        
        {{#if is_search}}
            {{#unless novedades.length}}
                    can not find result for"<strong>{{q}}</strong>"
            {{/unless}}
        {{/if}}
          
</div>
